@{
    Layout = null;
}

<div class="container w-xxl w-auto-xs uniqueSee3" ng-controller="SigninFormController" ng-init="app.settings.container = false;">


    @*<a href class="navbar-brand block m-t"><h4 style="font-weight:700;">{{app.name}}</h4></a>*@

    <div class="m-b-lg">
        <div class="wrapper text-center">
            <strong>Sign in</strong>
        </div>
        <form name="form" class="form-validation">
            <div class="text-danger wrapper text-center" ng-show="authError">
                {{authError}}
            </div>
            <div class="list-group list-group-sm">
                <div class="list-group-item">
                    <input type="email" placeholder="Email" class="form-control no-border" ng-model="user.email" required>
                </div>
                <div class="list-group-item">
                    <input type="password" placeholder="Password" class="form-control no-border" ng-minlength="6" ng-maxlength="20" ng-model="user.password" required>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary btn-block" ng-click="login()" ng-disabled='form.$invalid'>Log in</button>

            <div class="line line-dashed"></div>
            <p class="text-center"><small>Do not have an account?</small></p>
            <a ui-sref="access.signup" class="btn btn-lg btn-default btn-block">Create an account</a>
        </form>
    </div>

</div>
