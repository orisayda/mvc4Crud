                        <div class="form-group">                            

                            <label class="col-sm-2 control-label">Start Date</label>                           

                                <div class="col-sm-4" ng-controller="DatepickerDemoCtrl">
                                    <div class="input-group w-md">
                                        <input type="text" data-ng-model="newEvent.start_date" class="form-control" required datepicker-popup="{{format}}"
                                               is-open="opened" datepicker-options="dateOptions" ng-required="true" close-text="Close" />
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-default" ng-click="open($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                                        </span>
                                    </div>
                                </div>

                                <label class="col-sm-2 control-label text-left">Start Time</label>
                                <div class="col-sm-4">

                                    <ui-select data-ng-model="newEvent.start_time" theme="bootstrap">
                                        <ui-select-match placeholder="Select or Time in a list...">{{$select.selected.time}}</ui-select-match>
                                        <ui-select-choices repeat="item in times | filter: $select.search">
                                            <div ng-bind-html="item.time| highlight: $select.search"></div>
                                        </ui-select-choices>
                                    </ui-select>

                                </div>


                        </div>

                        <div class="form-group">

                            <label class="col-sm-2 control-label ">End Date</label>
                            <div class="col-sm-4" ng-controller="DatepickerDemoCtrl">
                                <div class="input-group w-md">
                                    <input type="text" data-ng-model="newEvent.end_date" class="form-control" datepicker-popup="{{format}}" 
                                           is-open="opened" datepicker-options="dateOptions" ng-required="true" close-text="Close" />
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-default" ng-click="open($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                                    </span>
                                </div>
                                <div style="margin-top: 5px;" class="text-danger text-left" ng-show="required_date">
                                    {{required_date}}
                                </div>   
                            </div>

                            <label class="col-sm-2 control-label text-left">End Time</label>
                            <div class="col-sm-4">

                                <ui-select data-ng-model="newEvent.end_time" theme="bootstrap">
                                    <ui-select-match placeholder="Select or Time in a list...">{{$select.selected.time}}</ui-select-match>
                                    <ui-select-choices repeat="item in times | filter: $select.search">
                                        <div ng-bind-html="item.time | highlight: $select.search"></div>
                                    </ui-select-choices>
                                </ui-select>

                            </div>


                        </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Priority</label>
                        <div class="col-sm-4">

                            <ui-select required data-ng-model="newEvent.priority" ng-change="pChange()" theme="bootstrap">
                                <ui-select-match placeholder="Select Priority">{{$select.selected.p}}</ui-select-match>
                                <ui-select-choices repeat="item in priorities | filter: $select.search">
                                    <div ng-bind-html="item.p | highlight: $select.search"></div>
                                </ui-select-choices>
                            </ui-select>
                            <div style="margin-top: 5px;" class="text-danger text-left" ng-show="required_priority">
                                {{required_priority}}
                            </div>        

                        </div>
                    </div>


                        <div class="form-group">
                            <label class="col-lg-2 control-label">Description</label>
                            <div class="col-lg-10">
                                <textarea class="form-control" data-ng-model="newEvent.description" rows="5" id="comment"></textarea>
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button type="submit" ng-click="addEvent()" class="btn btn-sm btn-success" ng-disabled='form.$invalid'>SAVE TASK</button>
                                <button type="button" ui-sref="app.event_list" class="btn btn-sm btn-danger" >CANCEL</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </div>


</div>









