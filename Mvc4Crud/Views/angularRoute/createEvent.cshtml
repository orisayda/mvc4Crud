@{
    Layout = null;
}


<div class="bg-light lter b-b wrapper-md">
    <h2 class="m-n font-thin h3">Create Task</h2>
</div>
<div class="wrapper-md" ng-controller="FormEventController" ng-init="app.settings.container = false;">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2" >
            <div class="panel panel-default">
                <div class="panel-heading font-bold">Create Task</div>
                <div class="panel-body">
                    <form class="bs-example form-horizontal">
                        <div class="text-danger wrapper text-center" ng-show="addError">
                            {{addError}}
                        </div>                       
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Title</label>
                            <div class="col-lg-10">
                                <input type="text" data-ng-model="newEvent.event_title" class="form-control" placeholder="Title">
                                <span class="help-block m-b-none">Picnic, Concert etc</span>
                                <div style="margin-top: 5px;" class="text-danger text-left" ng-show="required_title">
                                    {{required_title}}
                                </div> 
                            </div>
                        </div>

