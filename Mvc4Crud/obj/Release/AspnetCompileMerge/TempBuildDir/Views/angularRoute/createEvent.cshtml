@{
    Layout = null;
}


<div class="bg-light lter b-b wrapper-md">
    <h1 class="m-n font-thin h3">Form Event</h1>
</div>
<div class="wrapper-md" ng-controller="FormEventController" ng-init="app.settings.container = false;">
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading font-bold">Create Event</div>
                <div class="panel-body">
                    <form class="bs-example form-horizontal">
                        <div class="text-danger wrapper text-center" ng-show="addError">
                            {{addError}}
                        </div>                       
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Event Title</label>
                            <div class="col-lg-10">
                                <input type="text" data-ng-model="newEvent.event_title" required class="form-control" placeholder="Title">
                                <span class="help-block m-b-none">Picnic, Concert etc</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label text-left">Select Location</label>
                            <div class="col-sm-5">

                                <ui-select data-ng-model="newEvent.event_location"  theme="bootstrap" required>
                                    <ui-select-match placeholder="Select or search a Location in a list...">{{$select.selected.country_name}}</ui-select-match>
                                    <ui-select-choices repeat="item in countries | filter: $select.search">
                                        <div ng-bind-html="item.country_name | highlight: $select.search"></div>
                                        <small ng-bind-html="item.code | highlight: $select.search"></small>
                                    </ui-select-choices>
                                </ui-select>

                            </div>
                        </div>

                        <div class="form-group">

                            <label class="col-sm-2 control-label text-left">Start Date</label>
                            <div class="col-sm-4" ng-controller="DatepickerDemoCtrl">
                                <div class="input-group w-md">
                                    <input type="text" data-ng-model="newEvent.start_date" class="form-control" required datepicker-popup="{{format}}" 
                                            is-open="opened" datepicker-options="dateOptions" ng-required="true" close-text="Close" />
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-default" ng-click="open($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                                    </span>
                                </div>
                            </div>

                            <label class="col-sm-2 control-label text-left">Start Time</label>
                            <div class="col-sm-4">

                                <ui-select required data-ng-model="newEvent.start_time" theme="bootstrap">
                                    <ui-select-match placeholder="Select or Time in a list...">{{$select.selected.time}}</ui-select-match>
                                    <ui-select-choices repeat="item in times | filter: $select.search">
                                        <div ng-bind-html="item.time| highlight: $select.search"></div>
                                    </ui-select-choices>
                                </ui-select>

                            </div>


                        </div>

                        <div class="form-group">

                            <label class="col-sm-2 control-label text-left">End Date</label>
                            <div class="col-sm-4" ng-controller="DatepickerDemoCtrl">
                                <div class="input-group w-md">
                                    <input type="text" data-ng-model="newEvent.end_date" class="form-control" datepicker-popup="{{format}}" 
                                           is-open="opened" datepicker-options="dateOptions" ng-required="true" close-text="Close" />
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-default" ng-click="open($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                                    </span>
                                </div>
                            </div>

                            <label class="col-sm-2 control-label text-left">End Time</label>
                            <div class="col-sm-4">

                                <ui-select required data-ng-model="newEvent.end_time" theme="bootstrap">
                                    <ui-select-match placeholder="Select or Time in a list...">{{$select.selected.time}}</ui-select-match>
                                    <ui-select-choices repeat="item in times | filter: $select.search">
                                        <div ng-bind-html="item.time | highlight: $select.search"></div>
                                    </ui-select-choices>
                                </ui-select>

                            </div>


                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <div class="checkbox">
                                    <label class="i-checks">
                                        <input data-ng-model="status" type="checkbox"><i></i> All Day
                                    </label>
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-lg-2 control-label">Description</label>
                            <div class="col-lg-10">
                                <textarea class="form-control" data-ng-model="newEvent.description" rows="5" id="comment"></textarea>
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button type="submit" ng-click="addEvent()" class="btn btn-sm btn-info" ng-disabled='form.$invalid'>Save Event</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </div>


</div>









