@model Mvc4Crud.Models.UserLogin


@if (TempData["shortMessage"] != null)
{
    <script>

        alert('@(TempData["shortMessage"])');
        console.log('@(TempData["shortMessage"])');
        //console.log("not empty");

    </script>
}
else
{
     <script>

        console.log('not loged');

    </script>
}

@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <h4>Use a local account to log in.</h4>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label for="name" class="col-md-4 control-label">Email Address</label>
                    
                    <div class="col-md-10">
                        @Html.TextBoxFor(u => u.email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.email)
                    </div>
                </div>
                <div class="form-group">
                    <label for="name" class="col-md-4 control-label">Password</label>
                
                    <div class="col-md-10">
                        @Html.PasswordFor(u => u.password, new { @class = "form-control" })              
                        @Html.ValidationMessageFor(u => u.password)
                    </div>
                </div>
              
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>
                <p>
                    @*Html.ActionLink("SingUp", "User") if you don't have a local account.*@
                </p>
            }
        </section>
    </div>
   @* <div class="col-md-4">
        <section id="socialLoginForm">
            @Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>
       *@
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}