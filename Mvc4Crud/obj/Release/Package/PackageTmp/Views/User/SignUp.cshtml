@using (Html.BeginForm("Register", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))

                        {
                             @Html.AntiForgeryToken()
                            
                            @Html.ValidationSummary(true)
                            
                             <div class="form-group">
                                 <label for="name" class="col-md-4 control-label">First Name</label>
                                 <div class="col-md-6">
                                     @Html.TextBoxFor(users => users.first_name, new { @class = "form-control" })
                                     @Html.ValidationMessageFor(users => users.first_name)
                                 </div>
                            </div>
                            
                              <div class="form-group">
                                 <label for="name" class="col-md-4 control-label">Last Name</label>
                                 <div class="col-md-6">
                                     @Html.TextBoxFor(users => users.last_name, new { @class = "form-control" })
                                     @Html.ValidationMessageFor(users => users.last_name)
                                 </div>
                            </div>

                             <div class="form-group">
                                 <label for="name" class="col-md-4 control-label">Email</label>
                                 <div class="col-md-6">
                                     @Html.TextBoxFor(users => users.email, new { @class = "form-control" })
                                     @Html.ValidationMessageFor(users => users.email)
                                 </div>
                            </div>

                            
                              <div class="form-group">
                                 <label for="name" class="col-md-4 control-label">Password</label>
                                 <div class="col-md-6">
                                     @Html.PasswordFor(users => users.password, new { @class = "form-control" })
                                     @Html.ValidationMessageFor(users => users.password)
                                 </div>
            
                             </div>
    
